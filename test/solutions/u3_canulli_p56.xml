    <subtitles>
      <line ref="a">
        <cue start=" 6.400000 ">Salut, Éva!</cue>
      </line>
      <line ref="b">
        <cue start=" 7.520000 ">Salut!</cue>
      </line>
      <line ref="a">
        <cue start=" 8.560000 ">Je te dérange?</cue>
      </line>
      <line ref="b">
        <cue start=" 9.280000 ">Pas du tout!</cue>
        <cue start=" 10.880000 ">Je suis en train </cue>
        <cue start=" 11.680000 ">de regarder les photos </cue>
        <cue start=" 12.800000 ">de l’anniversaire de mon frère...</cue>
        <cue start=" 15.120000 ">Regarde,</cue>
        <cue start=" 15.960000 ">c’est lui avec mes parents...</cue>
      </line>
      <line ref="a">
        <cue start=" 17.200000 ">Quelle jolie photo!</cue>
        <cue start=" 19.480000 ">Il a quel âge?</cue>
      </line>
      <line ref="b">
        <cue start=" 20.680000 ">Il vient d’avoir </cue>
        <cue start=" 21.480000 ">dix-sept ans.</cue>
      </line>
      <line ref="a">
        <cue start=" 23.560000 ">Et elles,</cue>
        <cue start=" 24.000000 ">qui est-ce?</cue>
        <cue start=" 25.160000 ">Tes sœurs?</cue>
      </line>
      <line ref="b">
        <cue start=" 26.960000 ">Non,</cue>
        <cue start=" 27.680000 ">je n’ai pas de sœurs,</cue>
        <cue start=" 29.240000 ">ce sont mes cousines </cue>
        <cue start=" 30.080000 ">avec mon chien,</cue>
        <cue start=" 31.200000 ">Lucky!</cue>
      </line>
      <line ref="a">
        <cue start=" 32.680000 ">Il a l’air </cue>
        <cue start=" 33.120000 ">très doux…</cue>
      </line>
      <line ref="b">
        <cue start=" 33.640000 ">Oui,</cue>
        <cue start=" 34.480000 ">il vit chez nous </cue>
        <cue start=" 35.280000 ">depuis deux ans.</cue>
        <cue start=" 36.480000 ">Il vient de la SPA</cue>
      </line>
      <line ref="a">
        <cue start=" 38.000000 ">Ah,</cue>
        <cue start=" 38.640000 ">voilà pourquoi il s’appelle «Lucky»,</cue>
        <cue start=" 40.000000 ">je suppose!</cue>
        <cue start=" 41.840000 ">Ton père est plutôt jeune...</cue>
        <cue start=" 43.640000 ">Tu lui ressembles beaucoup...</cue>
      </line>
      <line ref="b">
        <cue start=" 45.440000 ">Oui,</cue>
        <cue start=" 45.800000 ">je suis grande</cue>
        <cue start=" 46.640000 ">et blonde comme lui</cue>
        <cue start=" 47.680000 ">mais j’ai les yeux verts </cue>
        <cue start=" 48.680000 ">de ma mère.</cue>
      </line>
      <line ref="a">
        <cue start=" 50.040000 ">Tu t’entends bien avec tes parents?</cue>
      </line>
      <line ref="b">
        <cue start=" 52.040000 ">Ça dépend… Ma mère est patiente </cue>
        <cue start=" 54.480000 ">et généreuse mais elle est trop exigeante côté collège… </cue>
        <cue start=" 58.160000 ">Mon père est plus cool...</cue>
        <cue start=" 60.080000 "></cue>
        <cue start=" 60.080000 ">Et chez toi,</cue>
        <cue start=" 60.680000 ">comment ça se passe?</cue>
      </line>
      <line ref="a">
        <cue start=" 62.560000 ">Mes parents sont divorcés.</cue>
        <cue start=" 63.720000 ">J’habite</cue>
        <cue start=" 65.240000 ">avec ma mère parce que </cue>
        <cue start=" 66.520000 ">mon père travaille souvent </cue>
        <cue start=" 68.000000 ">à l’étranger...</cue>
      </line>
      <line ref="b">
        <cue start=" 68.520000 ">Quelle est sa profession?</cue>
      </line>
      <line ref="a">
        <cue start=" 70.600000 ">Il est ingénieur.</cue>
        <cue start=" 72.160000 ">Ma mère est infrmière,</cue>
        <cue start=" 74.120000 ">elle n’a pas d’horaire fxe </cue>
        <cue start=" 75.360000 ">donc je suis souvent</cue>
        <cue start=" 76.240000 ">seul à la maison...</cue>
      </line>
      <line ref="b">
        <cue start=" 77.040000 ">Tu n’as pas de frères</cue>
        <cue start=" 78.440000 ">et sœurs?</cue>
      </line>
      <line ref="a">
        <cue start=" 79.360000 ">Si,</cue>
        <cue start=" 79.680000 ">j’ai une sœur </cue>
        <cue start=" 81.120000 ">mais elle a déjà vingtsept ans.</cue>
        <cue start=" 83.200000 "></cue>
        <cue start=" 83.200000 ">Elle est mariée</cue>
        <cue start=" 84.320000 ">et elle </cue>
        <cue start=" 84.520000 ">va avoir un bébé le mois prochain!</cue>
      </line>
      <line ref="b">
        <cue start=" 86.680000 ">Super!</cue>
        <cue start=" 87.600000 ">Tu vas bientôt être tonton,</cue>
        <cue start=" 88.880000 ">alors!</cue>
      </line>
      <line ref="a">
        <cue start=" 89.800000 ">Arrête!</cue>
        <cue start=" 90.320000 ">Je prends </cue>
        <cue start=" 91.280000 ">ça très au sérieux!</cue>
